<form method="POST" action="<%= url %>" >
  <div class="field">
    <label class="label">Nome</label>
    <div class="control">
      <input class="input" type="text" name="checklist[name]" placeholder="Task List"
        value="<%= checklist.name %>" />

      <% if( checklist.errors && checklist.errors.name ){ %>
        <p class="is-danger help">
          <%= checklist.errors.name %>
            <br/>
          <%= checklist.errors._message %>
        </p>
        <% } %>

    </div>
  </div>

  <button type="submit" class="button is-success">Save</button>
  <a href="/checklists/" class="button">Cancel</a>
</form>